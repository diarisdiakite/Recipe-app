<p style="color: green"><%= notice %></p>

<div class="container">
  <div class="d-flex justify-content-end mb-3">
    <%= link_to "Add Food", new_food_path, class: "btn btn-primary" %>
  </div>

  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Food</th>
        <th>Measurement Unit</th>
        <th>Unit Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.name %></td>
          <td><%= food.measurement_unit %></td>
          <td><%= food.price %></td>
          <td>
            <%= link_to "Show food", food %>
          </td>
          <td>
            <%= link_to "Edit food", edit_food_path(food) %>
          </td>
          <td>
            <%= link_to "Delete food", food, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
